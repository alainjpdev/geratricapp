generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String                 @id @default(uuid())
  email                 String                 @unique
  firstName             String                 @map("first_name")
  lastName              String                 @map("last_name")
  role                  String                 @default("paciente")
  avatar                String?
  passwordHash          String?                @map("password_hash")
  isActive              Boolean                @default(true) @map("is_active")
  createdAt             DateTime               @default(now()) @map("created_at")
  updatedAt             DateTime               @updatedAt @map("updated_at")
  grupoAsignado         String?                @map("grupo_asignado")
  announcementStudents  AnnouncementStudent[]  @relation("AnnouncementStudentUser")
  assignmentStudents    AssignmentStudent[]    @relation("AssignmentStudentUser")
  assignmentSubmissions AssignmentSubmission[] @relation("AssignmentSubmissionUser")
  classMemberships      ClassMember[]
  classesAsTeacher      Class[]                @relation("ClassTeacher")
  gradesAsGrader        Grade[]                @relation("GradeGrader")
  gradesAsStudent       Grade[]                @relation("GradeStudent")
  materialStudents      MaterialStudent[]      @relation("MaterialStudentUser")
  modulesCreated        Module[]               @relation("ModuleCreator")
  ordersCreated         Orden[]
  quizStudents          QuizStudent[]          @relation("QuizStudentUser")
  quizSubmissions       QuizSubmission[]       @relation("QuizSubmissionUser")
  streamItems           StreamItem[]
  parentRelations       StudentParent[]        @relation("StudentParentParent")
  studentParents        StudentParent[]        @relation("StudentParentStudent")
  bugReports            BugReport[]
  resident              Resident?
  medicationLogs        MedicationLog[]
  recordedVitals        VitalSign[]
  authoredNotes         NursingNote[]

  @@index([email])
  @@index([role])
  @@map("users")
}

model BugReport {
  id          String   @id @default(uuid())
  description String
  userId      String?  @map("user_id")
  status      String   @default("open")
  type        String   @default("manual") // 'manual' or 'auto'
  errorHash   String?  @map("error_hash") // For deduplication
  createdAt   DateTime @default(now()) @map("created_at")
  user        User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([type])
  @@index([errorHash])
  @@map("bug_reports")
}

model Resident {
  id                String   @id @default(uuid())
  firstName         String   @map("first_name")
  lastName          String   @map("last_name")
  dateOfBirth       DateTime @map("date_of_birth")
  roomNumber        String?  @map("room_number")
  status            String   @default("Active") // Active, Hospitalized, Deceased
  emergencyContact  Json?    @map("emergency_contact") // { name, phone, relation }
  allergies         String?
  conditions        String?
  carePlanSummary   String?  @map("care_plan_summary")
  
  userId            String?  @unique @map("user_id")
  user              User?    @relation(fields: [userId], references: [id])
  
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  medications       MedicationOrder[]
  vitalSigns        VitalSign[]
  nursingNotes      NursingNote[]

  @@map("residents")
}

model MedicationOrder {
  id              String   @id @default(uuid())
  residentId      String   @map("resident_id")
  medicationName  String   @map("medication_name")
  dosage          String
  frequency       String   // e.g., "Morning", "Evening", "QD", "BID", "PRN"
  route           String   // e.g., "Oral", "IV", "Topical"
  startDate       DateTime @map("start_date")
  endDate         DateTime? @map("end_date")
  isActive        Boolean  @default(true) @map("is_active")
  instructions    String?
  
  resident        Resident @relation(fields: [residentId], references: [id])
  logs            MedicationLog[]

  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@index([residentId])
  @@index([isActive])
  @@map("medication_orders")
}

model MedicationLog {
  id              String   @id @default(uuid())
  orderId         String   @map("order_id")
  administeredBy  String   @map("administered_by") // User ID
  administeredAt  DateTime @default(now()) @map("administered_at")
  status          String   // "Given", "Refused", "Missed"
  notes           String?
  shift           String?  // "Morning", "Afternoon", "Night"

  order           MedicationOrder @relation(fields: [orderId], references: [id])
  administrator   User     @relation(fields: [administeredBy], references: [id])

  @@index([orderId])
  @@index([administeredAt])
  @@map("medication_logs")
}

model VitalSign {
  id                    String   @id @default(uuid())
  residentId            String   @map("resident_id")
  recordedBy            String   @map("recorded_by") // User ID (Nurse)
  recordedAt            DateTime @default(now()) @map("recorded_at")
  
  bloodPressureSystolic Int?     @map("bp_systolic")
  bloodPressureDiastolic Int?    @map("bp_diastolic")
  heartRate             Int?     @map("heart_rate")
  temperature           Float?
  oxygenSaturation      Int?     @map("oxygen_saturation")
  glucose               Int?
  weight                Float?
  notes                 String?

  resident              Resident @relation(fields: [residentId], references: [id])
  recorder              User     @relation(fields: [recordedBy], references: [id])

  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")

  @@index([residentId])
  @@index([recordedAt])
  @@map("vital_signs")
}

model NursingNote {
  id          String   @id @default(uuid())
  residentId  String   @map("resident_id")
  authorId    String   @map("author_id") // User ID (Nurse)
  createdAt   DateTime @default(now()) @map("created_at")
  shift       String   // Morning, Afternoon, Night
  category    String   // General, Incident, Medical, Family, Activity
  content     String
  severity    String   @default("Low") // Low, Medium, High

  resident    Resident @relation(fields: [residentId], references: [id])
  author      User     @relation(fields: [authorId], references: [id])

  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([residentId])
  @@index([createdAt])
  @@map("nursing_notes")
}

model Class {
  id              String        @id @default(uuid())
  title           String
  description     String?
  classCode       String        @unique @map("class_code")
  section         String?
  subject         String?
  room            String?
  teacherId       String        @map("teacher_id")
  moduleId        String?       @map("module_id")
  backgroundImage String?       @map("background_image")
  isArchived      Boolean       @default(false) @map("is_archived")
  status          String        @default("active")
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")
  members         ClassMember[]
  module          Module?       @relation(fields: [moduleId], references: [id])
  teacher         User          @relation("ClassTeacher", fields: [teacherId], references: [id])
  grades          Grade[]
  streamItems     StreamItem[]
  topics          Topic[]

  @@index([teacherId])
  @@index([classCode])
  @@index([isArchived])
  @@map("classes")
}

model ClassMember {
  id       String   @id @default(uuid())
  classId  String   @map("class_id")
  userId   String   @map("user_id")
  role     String   @default("student")
  joinedAt DateTime @default(now()) @map("joined_at")
  status   String   @default("active")
  class    Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([classId, userId])
  @@index([classId])
  @@index([userId])
  @@map("class_members")
}

model Topic {
  id          String       @id @default(uuid())
  classId     String       @map("class_id")
  name        String
  description String?
  order       Int          @default(0)
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")
  streamItems StreamItem[]
  class       Class        @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@index([classId])
  @@map("topics")
}

model StreamItem {
  id                   String                @id @default(uuid())
  classId              String?               @map("class_id")
  type                 String
  title                String
  content              String?
  authorId             String                @map("author_id")
  topicId              String?               @map("topic_id")
  createdAt            DateTime              @default(now()) @map("created_at")
  updatedAt            DateTime              @updatedAt @map("updated_at")
  isArchived           Boolean               @default(false) @map("is_archived")
  announcementStudents AnnouncementStudent[]
  assignment           Assignment?
  attachments          Attachment[]
  material             Material?
  quiz                 Quiz?
  author               User                  @relation(fields: [authorId], references: [id])
  class                Class?                @relation(fields: [classId], references: [id])
  topic                Topic?                @relation(fields: [topicId], references: [id])

  @@index([classId])
  @@index([type])
  @@index([authorId])
  @@index([isArchived])
  @@index([createdAt(sort: Desc)])
  @@map("stream_items")
}

model Assignment {
  id                    String                 @id @default(uuid())
  streamItemId          String                 @unique @map("stream_item_id")
  points                Int?
  dueDate               DateTime?              @map("due_date") @db.Date
  dueTime               DateTime?              @map("due_time") @db.Time(6)
  instructions          String?
  assignToAll           Boolean                @default(true) @map("assign_to_all")
  createdAt             DateTime               @default(now()) @map("created_at")
  updatedAt             DateTime               @updatedAt @map("updated_at")
  assignedGroups        String[]               @default([]) @map("assigned_groups")
  deletedAt             DateTime?              @map("deleted_at")
  isDeleted             Boolean                @default(false) @map("is_deleted")
  assignmentStudents    AssignmentStudent[]
  assignmentSubmissions AssignmentSubmission[]
  streamItem            StreamItem             @relation(fields: [streamItemId], references: [id], onDelete: Cascade)
  grades                Grade[]

  @@index([streamItemId])
  @@index([dueDate])
  @@index([isDeleted])
  @@index([assignedGroups])
  @@map("assignments")
}

model AssignmentStudent {
  id           String     @id @default(uuid())
  assignmentId String     @map("assignment_id")
  studentId    String     @map("student_id")
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  student      User       @relation("AssignmentStudentUser", fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([assignmentId, studentId])
  @@index([assignmentId])
  @@index([studentId])
  @@map("assignment_students")
}

model AssignmentSubmission {
  id              String     @id @default(uuid())
  assignmentId    String     @map("assignment_id")
  studentId       String     @map("student_id")
  content         String?
  attachments     Json?
  status          String     @default("draft")
  submittedAt     DateTime?  @map("submitted_at")
  returnedAt      DateTime?  @map("returned_at")
  gradedAt        DateTime?  @map("graded_at")
  createdAt       DateTime   @default(now()) @map("created_at")
  updatedAt       DateTime   @updatedAt @map("updated_at")
  grade           Decimal?   @db.Decimal(10, 2)
  studentComments String?    @map("student_comments")
  teacherComments String?    @map("teacher_comments")
  reviewedAt      DateTime?  @map("reviewed_at")
  assignment      Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  student         User       @relation("AssignmentSubmissionUser", fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([assignmentId, studentId])
  @@index([assignmentId])
  @@index([studentId])
  @@index([status])
  @@map("assignment_submissions")
}

model Quiz {
  id              String           @id @default(uuid())
  streamItemId    String           @unique @map("stream_item_id")
  points          Int?
  dueDate         DateTime?        @map("due_date") @db.Date
  dueTime         DateTime?        @map("due_time") @db.Time(6)
  description     String?
  assignToAll     Boolean          @default(true) @map("assign_to_all")
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")
  assignedGroups  String[]         @default([]) @map("assigned_groups")
  grades          Grade[]
  questions       QuizQuestion[]
  quizStudents    QuizStudent[]
  quizSubmissions QuizSubmission[]
  streamItem      StreamItem       @relation(fields: [streamItemId], references: [id], onDelete: Cascade)

  @@index([streamItemId])
  @@index([dueDate])
  @@index([assignedGroups])
  @@map("quizzes")
}

model QuizQuestion {
  id            String   @id @default(uuid())
  quizId        String   @map("quiz_id")
  title         String
  description   String?
  type          String
  required      Boolean  @default(false)
  points        Int      @default(0)
  correctAnswer Json?    @map("correct_answer")
  options       Json?
  order         Int      @default(0)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  quiz          Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@index([quizId])
  @@index([quizId, order])
  @@map("quiz_questions")
}

model QuizStudent {
  id        String @id @default(uuid())
  quizId    String @map("quiz_id")
  studentId String @map("student_id")
  quiz      Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)
  student   User   @relation("QuizStudentUser", fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([quizId, studentId])
  @@index([quizId])
  @@index([studentId])
  @@map("quiz_students")
}

model QuizSubmission {
  id              String    @id @default(uuid())
  quizId          String    @map("quiz_id")
  studentId       String    @map("student_id")
  answers         Json?
  status          String    @default("draft")
  grade           Decimal?  @db.Decimal(10, 2)
  studentComments String?   @map("student_comments")
  teacherComments String?   @map("teacher_comments")
  submittedAt     DateTime? @map("submitted_at")
  gradedAt        DateTime? @map("graded_at")
  reviewedAt      DateTime? @map("reviewed_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  quiz            Quiz      @relation(fields: [quizId], references: [id], onDelete: Cascade)
  student         User      @relation("QuizSubmissionUser", fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([quizId, studentId])
  @@index([quizId])
  @@index([studentId])
  @@index([status])
  @@map("quiz_submissions")
}

model Material {
  id               String            @id @default(uuid())
  streamItemId     String            @unique @map("stream_item_id")
  description      String?
  assignToAll      Boolean           @default(true) @map("assign_to_all")
  createdAt        DateTime          @default(now()) @map("created_at")
  updatedAt        DateTime          @updatedAt @map("updated_at")
  assignedGroups   String[]          @default([]) @map("assigned_groups")
  materialStudents MaterialStudent[]
  streamItem       StreamItem        @relation(fields: [streamItemId], references: [id], onDelete: Cascade)

  @@index([streamItemId])
  @@index([assignedGroups], type: Gin)
  @@map("materials")
}

model MaterialStudent {
  id         String   @id @default(uuid())
  materialId String   @map("material_id")
  studentId  String   @map("student_id")
  material   Material @relation(fields: [materialId], references: [id], onDelete: Cascade)
  student    User     @relation("MaterialStudentUser", fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([materialId, studentId])
  @@index([materialId])
  @@index([studentId])
  @@map("material_students")
}

model Attachment {
  id           String     @id @default(uuid())
  streamItemId String     @map("stream_item_id")
  type         String
  name         String
  url          String?
  filePath     String?    @map("file_path")
  fileSize     BigInt?    @map("file_size")
  mimeType     String?    @map("mime_type")
  order        Int        @default(0)
  createdAt    DateTime   @default(now()) @map("created_at")
  streamItem   StreamItem @relation(fields: [streamItemId], references: [id], onDelete: Cascade)

  @@index([streamItemId])
  @@index([type])
  @@map("attachments")
}

model Grade {
  id           String      @id @default(uuid())
  classId      String      @map("class_id")
  assignmentId String?     @map("assignment_id")
  quizId       String?     @map("quiz_id")
  studentId    String      @map("student_id")
  pointsEarned Decimal?    @map("points_earned") @db.Decimal(10, 2)
  maxPoints    Decimal?    @map("max_points") @db.Decimal(10, 2)
  percentage   Decimal?    @db.Decimal(5, 2)
  status       String      @default("pending")
  feedback     String?
  submittedAt  DateTime?   @map("submitted_at")
  gradedAt     DateTime?   @map("graded_at")
  gradedById   String?     @map("graded_by")
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @updatedAt @map("updated_at")
  assignment   Assignment? @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  class        Class       @relation(fields: [classId], references: [id], onDelete: Cascade)
  gradedBy     User?       @relation("GradeGrader", fields: [gradedById], references: [id])
  quiz         Quiz?       @relation(fields: [quizId], references: [id], onDelete: Cascade)
  student      User        @relation("GradeStudent", fields: [studentId], references: [id], onDelete: Cascade)

  @@index([classId])
  @@index([studentId])
  @@index([assignmentId])
  @@index([quizId])
  @@map("grades")
}

model Module {
  id          String   @id @default(uuid())
  title       String
  description String?
  url         String?
  category    String?
  difficulty  String?
  duration    Int?
  thumbnail   String?
  instructor  String?
  isActive    Boolean  @default(true) @map("is_active")
  isPublished Boolean  @default(false) @map("is_published")
  order       Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  createdById String?  @map("created_by_id")
  classes     Class[]
  createdBy   User?    @relation("ModuleCreator", fields: [createdById], references: [id])

  @@index([category])
  @@index([isActive])
  @@index([isPublished])
  @@map("modules")
}

model StudentParent {
  id           String   @id @default(uuid())
  studentId    String   @map("student_id")
  parentId     String   @map("parent_id")
  relationship String?
  isPrimary    Boolean  @default(false) @map("is_primary")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  parent       User     @relation("StudentParentParent", fields: [parentId], references: [id], onDelete: Cascade)
  student      User     @relation("StudentParentStudent", fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, parentId])
  @@index([studentId])
  @@index([parentId])
  @@map("student_parents")
}

model AnnouncementStudent {
  id           String     @id @default(uuid())
  streamItemId String     @map("stream_item_id")
  studentId    String     @map("student_id")
  streamItem   StreamItem @relation(fields: [streamItemId], references: [id], onDelete: Cascade)
  student      User       @relation("AnnouncementStudentUser", fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([streamItemId, studentId])
  @@index([streamItemId])
  @@index([studentId])
  @@map("announcement_students")
}

model Client {
  id            String    @id @default(uuid())
  companyName   String    @map("company_name")
  contactName   String?   @map("contact_name")
  email         String?
  phone         String?
  address       String?
  website       String?
  status        String    @default("prospect")
  source        String?
  totalProjects Int       @default(0) @map("total_projects")
  totalRevenue  Decimal   @default(0) @map("total_revenue") @db.Decimal(12, 2)
  lastContact   DateTime? @map("last_contact") @db.Date
  notes         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  eventos       Evento[]
  ordenes       Orden[]

  @@index([companyName])
  @@index([status])
  @@index([email])
  @@index([lastContact])
  @@map("clients")
}

model Evento {
  id          String    @id @default(uuid())
  name        String
  date        DateTime  @db.Date
  time        DateTime? @db.Time(6)
  location    String?
  type        String
  status      String    @default("planned")
  attendees   Int       @default(0)
  description String?
  clientId    String?   @map("client_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  client      Client?   @relation(fields: [clientId], references: [id])

  @@index([date])
  @@index([type])
  @@index([status])
  @@index([clientId])
  @@map("eventos")
}

model Orden {
  id          String      @id @default(uuid())
  orderNumber String      @unique @map("order_number")
  clientId    String?     @map("client_id")
  clientName  String      @map("client_name")
  clientEmail String?     @map("client_email")
  subtotal    Decimal     @default(0) @db.Decimal(12, 2)
  discount    Decimal     @default(0) @db.Decimal(12, 2)
  total       Decimal     @default(0) @db.Decimal(12, 2)
  status      String      @default("pending")
  notes       String?
  createdById String      @map("created_by_id")
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")
  ordenItems  OrdenItem[]
  client      Client?     @relation(fields: [clientId], references: [id])
  createdBy   User        @relation(fields: [createdById], references: [id])

  @@index([orderNumber])
  @@index([clientId])
  @@index([status])
  @@index([createdAt(sort: Desc)])
  @@map("ordenes")
}

model OrdenItem {
  id        String   @id @default(uuid())
  ordenId   String   @map("orden_id")
  code      String?
  title     String
  price     Decimal  @db.Decimal(10, 2)
  quantity  Int      @default(1)
  total     Decimal  @db.Decimal(12, 2)
  order     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  orden     Orden    @relation(fields: [ordenId], references: [id], onDelete: Cascade)

  @@index([ordenId])
  @@map("orden_items")
}
